
@{
    ViewData["Title"] = "Result";
}

<h1>Result</h1>

@if (!String.IsNullOrEmpty(ViewBag.Message))
{

<div class="alert @ViewBag.Type" role="alert" id="divAlert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Success!</strong> @ViewBag.Message
</div>

    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 2000);
    </script>

}

@model IEnumerable<Person>

<table class="table table-dark table-bordered table-hover table-responsive-sm" style="text-align:center;" width="100%" border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Birthday</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName @person.Surname</td>
                <td>@person.Birthday.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
<br />
<div>
    <a class="btn btn-outline-dark btn-sm" asp-controller="Person" asp-action="Index">Home</a>
</div>
